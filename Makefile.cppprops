CPPPROPS_DIR = .bld/cppprops/
CPPPROPS_SOURCE = $(CPPPROPS_DIR)src/generated.cpp
CPPPROPS_OBJECT = $(CPPPROPS_DIR)bin/generated.o
CPPPROPS_TARGET = $(CPPPROPS_DIR)bin/cppprops.dll
CPPPROPS_LFLAGS = -shared -fopenmp -mthreads
CPPPROPS_LIBS = $(LIBS) -L$(OBJECTS_DIR) -lPolyworld

cppprops: FORCE
	$(MKDIR) $(CPPPROPS_DIR)bin
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $(CPPPROPS_OBJECT) $(CPPPROPS_SOURCE)
	$(LINK) $(CPPPROPS_LFLAGS) -o $(CPPPROPS_TARGET) $(CPPPROPS_OBJECT) $(CPPPROPS_LIBS)
